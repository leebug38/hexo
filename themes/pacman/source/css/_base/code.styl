// More theme here http//softwaremaniacs.org/media/soft/highlight/test.html
// Just change those colors
// https//github.com/chriskempson/tomorrow-theme
highlight-background = #d3d3d3
highlight-current-line = #393939
highlight-line-numbers = #666
highlight-selection = #373b41
highlight-foreground = #1f1f1f
highlight-comment = #8b4513
highlight-red = #dc143c
highlight-orange = #ffa500
highlight-yellow = #daa520
highlight-green = #2e8b57
highlight-aqua = #99cc00
highlight-blue = #87ceeb
highlight-purple = #ee82ee

$code-block
  background highlight-background
  margin 0.5em 0
  padding 1em 2%
  border-radius: 0.5em
  overflow auto
  color highlight-foreground
  line-height line-height
  font-size font-size

$line-numbers
  color highlight-line-numbers 
  font-size 0.85em
  line-height line-height
  font-size font-size

.article-content   
  pre
    font-family font-mono
    @extend $code-block
    code
      background none
      text-shadow none
      padding 0
  .highlight
    @extend $code-block
    pre
      border none
      margin 0
      padding 0
    table
      margin 0
      width auto
    td
      border none
      padding 0
    figcaption
      clearfix()
      font-size 0.85em
      text-align left
      color highlight-comment
      line-height 1em
      padding 0.5em 0
      margin-bottom 0.5em
      a
        float right
    .gutter pre
      @extend $line-numbers
      text-align right
      padding-right 1.5em
  .gist
    margin 0.5em 0
    background highlight-background
    padding 1em 2%
    .gist-file
      border none
      font-family font-mono
      margin 0
      .gist-data
        background none
        border none
        .line-numbers
          @extend $line-numbers
          background none
          border none
          padding 0 1.5em 0 0
        .line-data
          padding 0 !important
      .highlight
        margin 0
        padding 0
        border none
      .gist-meta
        background highlight-background
        color highlight-comment
        font 0.85em font-serif
        padding 0
        margin-top 1em
        a
          color color-red
          font-weight normal
          &:hover
            color color-blue

pre
  .comment
    color highlight-comment
  .title
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .tag .title
  .pi
  .doctype
  .doctype
  .id
  .class
  .pseudo 
    color highlight-red
  .number
  .preprocessor
  .pragma
  .built_in
  .literal
  .params
  .constant 
    color highlight-orange
  .class .title  
  .rules .attribute
    color highlight-yellow
  .string
  .value
  .inheritance
  .header
  .symbol
  .cdata
    color highlight-green
  .css .hexcolor 
    color highlight-aqua
  .function
  .function .title
  .decorator
  .python .title
  .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color highlight-blue
  .keyword
  .javascript .function 
    color highlight-purple
  .coffeescript .javascript
  .javascript .xml
  .tex .formula
  .xml .javascript
  .xml .vbscript
  .xml .css
  .xml .cdata 
    opacity 0.5
